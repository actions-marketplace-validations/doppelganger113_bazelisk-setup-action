{
  "compilerOptions": {
    "lib": [
      "es2015"
    ],
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "target": "es2015",
    "outDir": "dist",
    "skipLibCheck": true,
    "inlineSourceMap": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
